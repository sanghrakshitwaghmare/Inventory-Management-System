<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="style.css" rel="stylesheet">
    <title>Inventory List</title>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between">
            <h2>Inventory List</h2>
            <button type="submit" class="btn btn-primary">
                <a href="/" style="color: white; text-decoration: none;">Create</a>
            </button>
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <div class="stats-container">
                    <div class="stat">
                        <i class="fas fa-boxes"></i>
                        <h4>Total Products: <%= rows.length %></h4>
                    </div>
                    <div class="stat">
                        <i class="fas fa-rupee-sign"></i>
                        <h4>Total Store Value: â‚¹ <%= rows.reduce((acc, current) => acc + (current.price * current.quantity), 0) %></h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <% if(rows.length > 0){ %>
                <% rows.map((eachData) => { %>
                <div class="col-md-4 mx-3 product-card mb-4">
                    <div class="card" style="width: 18rem; margin-bottom: 20px;">
                        <div class="card-body">
                            <h5 class="card-title">Product: <%= eachData.name %></h5>
                            <h6 class="card-subtitle mb-2 text-muted">Price: <%= eachData.price %></h6>
                            <h6 class="card-subtitle mb-2 text-muted">Quantity: <%= eachData.quantity %></h6>
                            <h6 class="card-subtitle mb-2 text-muted">Total: <%= eachData.price * eachData.quantity %></h6>

                            <a href="/update-data?id=<%=eachData.id %>" class="btn btn-outline-info">Edit</a>
                            <a href="/delete-data?id=<%=eachData.id %>" class="btn btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
                <% }) %>
            <%} else{ %>
                <p>No Data Found</p>
            <% } %>
        </div>
    </div>
</body>
</html>